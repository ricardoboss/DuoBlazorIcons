@inherits BaseIcon

@code {

	[Parameter]
	public IconName Name { get; set; }

	private RenderFragment IconComponent => builder =>
	{
		builder.OpenComponent(0, Name.GetComponentType());

		if (PrimaryColor is not null)
			builder.AddAttribute(1, nameof(PrimaryColor), PrimaryColor);

		if (PrimaryOpacity is not null)
			builder.AddAttribute(2, nameof(PrimaryOpacity), PrimaryOpacity);

		if (SecondaryColor is not null)
			builder.AddAttribute(3, nameof(SecondaryColor), SecondaryColor);

		if (SecondaryOpacity is not null)
			builder.AddAttribute(4, nameof(SecondaryOpacity), SecondaryOpacity);

		foreach (var attribute in AdditionalAttributes ?? [])
		{
			builder.AddAttribute(5, attribute.Key, attribute.Value);
		}

		builder.CloseComponent();
	};

}

@IconComponent
